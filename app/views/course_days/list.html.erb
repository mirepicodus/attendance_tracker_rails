<h1>Course Days</h1>

<% @course_days.each do |course_day| %>
  <ul>
    <li><%= course_day.date %></li>
  </ul>
<%end%>

<% if @course_day.errors.any?%>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @course_day.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/course_days" method="post">
  <input id="date" name="course_day[date]" type="date">
  <button>Add</button>
</form>

