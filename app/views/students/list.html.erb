<h1>Students</h1>

<ul>
  <% @students.each do |student| %>
    <li>
      <form action="/students/<%= student.id %>" method="post">
        <input name="_method" type="hidden" value="patch">
        <input id="name" name="student[name]" placeholder="<%= student.name %>">
        <button>Update</button>
        <a href="/students/<%=student.id%>" data-confirm="You Sure?" data-method="delete" rel="nofollow"><button>Delete</button></a>
      </form>

    </li>
  <% end %>
</ul>

<%= render('layouts/errors', :object => @student) %>

<form action="/students" method="post">
  <input id="name" name="student[name]" placeholder="Enter New Name" type="text">
  <button>Add</button>
</form>





